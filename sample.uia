// Function to calculate factorial
int factorial(int n) {
    if (n <= 1) {
        return 1;
    } 
    else {
        return n * factorial(n - 1);
    }
}

// Function to fill an array with values
void fillArray(int size) {
    int i = 0;
    
    while (i < size) {
        i = i + 1;
    }
}

